<%= stylesheet_link_tag "data" %>

<%# 　紹介文　 %>
<div class="container d-flex　align-items-center">
  <h3 class="font-weight-bold text-left"><span class="title">Upper Weather data</span></h3>
  <h3>Weather Data</h3>
  <%# <h3 class="font-weight-bold text-center"><%= @datas.created_at%>
</div>


<%# 　左のラベル　 %>
<div class="mt-3 container">
  <% @data_text.each_with_index do |title,idx| %>
        <div class="d-flex">
          <p><%= title %></p>
          <p class="text-danger"><%= @datas.created_at%>update</p>
        </div>
        <div class="row">
            <%# ------------------------------ sub images ------------------------------  %>
            <div class="col-2">
              <a href="/data/show"><div class="weather_icon"><%= image_tag "height/#{@height_icon[idx]}", class: "border w-100", id: "h_200hpa"%></div></a>
              <a href="#300hpa_block"><div class="mt-3 text-center"><i class="fas fa-arrow-up"></i></div></a>
            </div>
            <%# ------------------------------ main images ------------------------------  %>
            <div class="col-8 data-img">
            <%# dataimege ---> awas %>
               <div class="mb-5 text-center data-image">
                <%= image_tag @path+"/"+@data_name[idx], class: "border w-100", style: "position: relative; z-index: 1;" %>
                <%= image_tag @path_assets+"/"+@overlays[idx], class: "border w-100", style: "position: absolute; top: 0;
    left: 0; z-index: 2;" %>
               </div>
            </div>
            <%# ------------------------------ sub images ------------------------------  %>
            <div class="col-2">
              <a href="/data/show/200"><div class="weather_icon"><%= image_tag "height/#{@height_icon[idx]}", class: "border w-100", id: "h_200hpa"%></div></a>
              <a href="#300hpa_block"><div class="mt-3 text-center"><i class="fas fa-arrow-up"></i></div></a>
            </div>
        </div> <%# row %>
  <% end %>
</div> 